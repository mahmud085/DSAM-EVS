<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>HelloAppEngine</display-name>

    <!-- Servlets -->

    <servlet>
        <servlet-name>Main</servlet-name>
        <jsp-file>index.jsp</jsp-file>
    </servlet>
    <!-- JSPC servlet mappings start -->

    <servlet>
        <servlet-name>org.apache.jsp.candidateMgmt_jsp</servlet-name>
        <servlet-class>org.apache.jsp.candidateMgmt_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.index_jsp</servlet-name>
        <servlet-class>org.apache.jsp.index_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.voterMgmt_jsp</servlet-name>
        <servlet-class>org.apache.jsp.voterMgmt_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.voteTimeMgmt_jsp</servlet-name>
        <servlet-class>org.apache.jsp.voteTimeMgmt_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.votingInterface_jsp</servlet-name>
        <servlet-class>org.apache.jsp.votingInterface_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.votingResults_jsp</servlet-name>
        <servlet-class>org.apache.jsp.votingResults_jsp</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.candidateMgmt_jsp</servlet-name>
        <url-pattern>/candidateMgmt.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.index_jsp</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.voterMgmt_jsp</servlet-name>
        <url-pattern>/voterMgmt.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.voteTimeMgmt_jsp</servlet-name>
        <url-pattern>/voteTimeMgmt.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.votingInterface_jsp</servlet-name>
        <url-pattern>/votingInterface.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.votingResults_jsp</servlet-name>
        <url-pattern>/votingResults.jsp</url-pattern>
    </servlet-mapping>

<!-- JSPC servlet mappings end -->

<servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>VotingResultServlet</servlet-name>
        <url-pattern>/votingresults</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VotingResultServlet</servlet-name>
        <servlet-class>com.example.appengine.java8.servlet.VotingResultServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>VoteTimeServlet</servlet-name>
        <url-pattern>/admin/votetime</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VoteTimeServlet</servlet-name>
        <servlet-class>com.example.appengine.java8.servlet.VoteTimeServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>VotersServlet</servlet-name>
        <url-pattern>/admin/voterlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VotersServlet</servlet-name>
        <servlet-class>com.example.appengine.java8.servlet.VotersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NotifyVoterServlet</servlet-name>
        <url-pattern>/admin/notifyVoters</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NotifyVoterServlet</servlet-name>
        <servlet-class>com.example.appengine.java8.servlet.NotifyVoterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CandidateServlet</servlet-name>
        <url-pattern>/admin/candidatemanagement</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CandidateServlet</servlet-name>
        <servlet-class>com.example.appengine.java8.servlet.CandidateServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>HelloAppEngine</servlet-name>
        <url-pattern>/admin/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HelloAppEngine</servlet-name>
        <servlet-class>com.example.appengine.java8.servlet.HelloAppEngine</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>VotingReminderServlet</servlet-name>
        <url-pattern>/votingReminder</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VotingReminderServlet</servlet-name>
        <servlet-class>com.example.appengine.java8.servlet.VotingReminderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VotingInterface</servlet-name>
        <url-pattern>/user/votingInterface</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VotingInterface</servlet-name>
        <servlet-class>com.example.appengine.java8.servlet.VotingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UploadFileServelet</servlet-name>
        <url-pattern>/admin/uploadfile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UploadFileServelet</servlet-name>
        <servlet-class>com.example.appengine.java8.servlet.UploadFileServelet</servlet-class>
    </servlet>


    <security-constraint>
        <web-resource-collection>
            <web-resource-name>hello</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <url-pattern>/user/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>


</web-app>
